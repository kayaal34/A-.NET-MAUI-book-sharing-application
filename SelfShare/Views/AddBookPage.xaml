<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SelfShare.Views.AddBookPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <Grid RowDefinitions="Auto, *" VerticalOptions="Fill">

            <Grid Grid.Row="0" 
                  BackgroundColor="#2D9CDB"
                  HeightRequest="110" 
                  Padding="20,50,20,10" 
                  VerticalOptions="Start">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="1"
                       Text="Add New Book"
                       TextColor="White"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" 
                       Margin="0,0,24,0"/>
            </Grid>

            <VerticalStackLayout Grid.Row="1" Spacing="20" Padding="30,30,30,50">

                <VerticalStackLayout.Resources>
                    <Style TargetType="Frame" x:Key="InputFrameStyle">
                        <Setter Property="BackgroundColor" Value="#F0F0F0" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="5" />
                        <Setter Property="HasShadow" Value="False" />
                        <Setter Property="BorderColor" Value="Transparent" />
                    </Style>
                    <Style TargetType="Entry">
                        <Setter Property="BackgroundColor" Value="Transparent" />
                        <Setter Property="TextColor" Value="#333333" />
                        <Setter Property="PlaceholderColor" Value="#A0A0A0" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="Margin" Value="10,0" />
                    </Style>
                    <Style TargetType="Editor">
                        <Setter Property="BackgroundColor" Value="Transparent" />
                        <Setter Property="TextColor" Value="#333333" />
                        <Setter Property="PlaceholderColor" Value="#A0A0A0" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="Margin" Value="10,5" />
                        <Setter Property="AutoSize" Value="Disabled" />
                    </Style>
                </VerticalStackLayout.Resources>

                <Frame Style="{StaticResource InputFrameStyle}">
                    <Entry x:Name="TitleEntry" Placeholder="Book Title" />
                </Frame>

                <Frame Style="{StaticResource InputFrameStyle}">
                    <Entry x:Name="AuthorEntry" Placeholder="Author" />
                </Frame>

                <Frame Style="{StaticResource InputFrameStyle}" HeightRequest="150">
                    <Editor x:Name="DescriptionEditor" Placeholder="Description" VerticalOptions="Fill" />
                </Frame>

                <Frame Style="{StaticResource InputFrameStyle}">
                    <Entry x:Name="ConditionEntry" Placeholder="Condition" />
                </Frame>

                <Frame BackgroundColor="#F8F9FA"
                       CornerRadius="18"
                       Padding="30"
                       HasShadow="False"
                       BorderColor="#E0E0E0"
                       HeightRequest="200"
                       Margin="0,10,0,0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnUploadPhotoTapped" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
                        <Image x:Name="BookImage"
                               Source="upload_cloud.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               HorizontalOptions="Center"
                               Aspect="AspectFit" />

                        <Label Text="Upload Photo"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               HorizontalOptions="Center" />
                        <Label Text="Tap to add photo of your book"
                               FontSize="13"
                               TextColor="#A0A0A0"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Add Book"
                        BackgroundColor="#2D9CDB"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="55"
                        Margin="0,30,0,0"
                        Clicked="OnAddBookClicked" />

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>