<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SelfShare.Views.SignUpPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="True"
             Title="Sign Up">

    <ScrollView MaximumWidthRequest="450" HorizontalOptions="Center">
        <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">


            <Label Text="Shelf Share" 
           TextColor="#0A1931" 
           FontSize="24" 
           FontAttributes="Bold" 
           HorizontalOptions="Center"/>
            
            <Image Source="books_logo.png" 
                   HeightRequest="130" 
                   WidthRequest="130"
                   HorizontalOptions="Center"/>

        

            <Label Text="Sign Up" 
                   TextColor="#0A1931" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0" HeightRequest="50">
                <Entry x:Name="NameEntry" 
                       Placeholder="Full Name" 
                       TextColor="#0A1931" 
                       PlaceholderColor="Gray" 
                       VerticalOptions="Center"/>
            </Border>

            <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0" HeightRequest="50">
                <Entry x:Name="EmailEntry" 
                       Placeholder="Email" 
                       Keyboard="Email" 
                       TextColor="#0A1931" 
                       PlaceholderColor="Gray" 
                       VerticalOptions="Center"/>
            </Border>

            <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0" HeightRequest="50">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry x:Name="PasswordEntry" 
               Grid.Column="0"
               Placeholder="Password" 
               IsPassword="True" 
               TextColor="#0A1931" 
               PlaceholderColor="Gray" 
               VerticalOptions="Center"/>

                    <ImageButton x:Name="PasswordEye"
                     Grid.Column="1"
                     Source="eye_closed.png"
                     BackgroundColor="Transparent"
                     HeightRequest="25"
                     WidthRequest="25"
                     Opacity="0.6"
                     VerticalOptions="Center"
                     Clicked="OnPasswordEyeClicked"/>
                </Grid>
            </Border>

            <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0" HeightRequest="50">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry x:Name="ConfirmPasswordEntry" 
               Grid.Column="0"
               Placeholder="Confirm Password" 
               IsPassword="True" 
               TextColor="#0A1931" 
               PlaceholderColor="Gray" 
               VerticalOptions="Center"/>

                    <ImageButton x:Name="ConfirmPasswordEye"
                     Grid.Column="1"
                     Source="eye_closed.png"
                     BackgroundColor="Transparent"
                     HeightRequest="25"
                     WidthRequest="25"
                     Opacity="0.6"
                     VerticalOptions="Center"
                     Clicked="OnConfirmPasswordEyeClicked"/>
                </Grid>
            </Border>

            <Button Text="Sign Up"
                    BackgroundColor="#2D9CDB"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    FontSize="18"
                    Margin="0,15,0,0"
                    Clicked="OnSignUpClicked"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                <Label Text="Already have an account?" TextColor="Gray" FontSize="13"/>
                <Label Text="Log In" 
                       TextColor="#2D9CDB" 
                       FontAttributes="Bold" 
                       FontSize="13"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginRedirectClicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>